@model MainApp.Models.RegisterModelDTO
@{
    ViewBag.Title = "Регистрация";
    Layout = "/Views/Layout/EntryLayout.cshtml";
}

<link rel="stylesheet" href=~/css/entrylayout.min.css/>

@section Header{
    <h1>Регистрация</h1>
}

<form method="post" class="content__main">
        <div class="form__error">
            @ViewBag.Error
        </div>

        <div class="form__input">
        <label asp-for="UserName">Login</label><br />
        <input type="text" asp-for="UserName" /><br />
        <span asp-validation-for="UserName" />
        </div>

        <div class="form__input">
            <label asp-for="Password">Password</label><br />
            <input type="password" asp-for="Password"/><br />
            <span asp-validation-for="Password"  />
        </div>

        <div class="form__input">
            <label asp-for="ConfirmPassword">Confirm Password</label><br />
            <input type="password" asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword"  />
        </div>

        <div class="form__button">
            <button type="submit">Зарегистрироваться</button>
        </div>
</form>
 
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
